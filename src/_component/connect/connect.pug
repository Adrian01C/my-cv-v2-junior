.red-box
    .section-title Let's connect
.connect
    .space(height="30")
    button.youtube-button
        a.youtube-link(href="https://www.youtube.com/watch?v=7lgg_MSblRE")
            span.youtube-icon(class=`icon-youtube`)
    .space(height="30")
    .avatar-holder
        img.avatar(src="asset/image/avatar/avatar_2.jpg", alt="something went wrong")
    .space(height="30")


    ul.social-media__list
        each button, key in buttonList
            li.social-icons
                label.social-icons__label(for=`message-id-${key}`)
                    span(class=button.icon)
    .space(height="30")


    .social-media__body
        input.input-item(type="radio", checked name="radio-input", id="default-message-radio")
        each button, key in buttonList
            input.input-item(type="radio", name="radio-input", id=`message-id-${key}`)
            .description
                .input-item__header
                    h3.title-description=button.description.title
                    label.input-item__close(for="default-message-radio") &times;
                .paragraph-description
                    p.paragraph=button.description.text
                .icon-url__wrapper
                    .icon-url
                        span(class=button.description.iconUrl)
                        a.media-link(href=button.description.url)=button.description.label
    .space(height="30")
    .arrow-down
        span(class=`icon-arrow-down`)
    .space(height="30")
    .space(height="30")




